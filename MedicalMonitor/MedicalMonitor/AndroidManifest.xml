<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.him.medicalmonitor"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/bnp"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!-- <service android:enabled="true" android:name=".ReminderService" /> -->
        <service android:name="org.him.medicalmonitor.ReminderService" >
            <intent-filter>
                <action android:name="org.him.medicalmonitor.ReminderService" >
                </action>
            </intent-filter>
        </service>

        <receiver android:name="org.him.medicalmonitor.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" >
                </action>
            </intent-filter>
        </receiver>

        <activity
            android:name="org.him.medicalmonitor.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.him.medicalmonitor.NextActivity"
            android:label="@string/title_activity_next" >
        </activity>
        <activity
            android:name="org.him.medicalmonitor.StaticViewer"
            android:label="@string/title_activity_static_viewer" >
        </activity>
    </application>

</manifest>
